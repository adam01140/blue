rules_version = '2';

/* ─── Firestore ─────────────────────────────────────── */
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow read/write access to any subcollections (e.g., /users/{userId}/documents)
      match /{subCollection=**}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow public read access to the forms collection (for bot recommendations)
    match /forms/{formId} {
      allow read: if true; // Allow anyone to read forms
      allow write: if false; // Only allow writes through Admin Console or server
    }

    // Allow all authenticated users to read the counties collection
    match /counties/{countyId} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through Admin Console or server
    }
  }
}

/* ─── Cloud Storage ─────────────────────────────────── */
service firebase.storage {
  match /b/{bucket}/o {

    // Only allow access to files in their own path
    match /users/{userId}/documents/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
